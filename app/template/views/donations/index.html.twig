  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDTTfWur0PDbZWPr7Pmq8K3jiDp0_xUziI"></script>
  <script src="{{ base_url }}public/template/material/assets/js/material-kit.min.js?v=3.0.4" type="text/javascript"></script>

  <script>
$(document).ready(function () {
    
    $("#other").click( function(){
        $("#customAmountDiv").show();
    });
    $("#customRadio1").click( function(){
        $("#customAmountDiv").hide();
        $("#customAmount").val(' ');
    });
    $("#customRadio2").click( function(){
        $("#customAmountDiv").hide();
        $("#customAmount").val(' ');
    });
    $("#customRadio3").click( function(){
        $("#customAmountDiv").hide();
        $("#customAmount").val(' ');
    });
    $("#customRadio4").click( function(){
        $("#customAmountDiv").hide();
        $("#customAmount").val(' ');
    });

    $("#PayPal").click( function(){
        $("#pp_donate").show();
        $("#cashapp_msg").hide();
    });

    $("#CashApp").click( function(){
        $("#cashapp_msg").show();
        $("#pp_donate").hide();
    });
});
</script>

</body>

