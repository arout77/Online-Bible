{% extends 'docs.html.twig' %}
{% block title %}Video Categories  | Word of God{% endblock %}
{% block content %}
<section>
    <div class="card mb-4">
        <div class="card-body"  id="categoriesSelection">
            <h3 class="card-title text-center">Video Categories</h3>
            <div class="card-subtitle mb-3">
                <div class="controls">
                    <div id="catShuffle" class="row">
                        <div class="col-sm-3">
                            <select id="selectCat" class="select-filter form-select">
                                <option value="all">All</option>
                                {% for cat in video_categories %}
                                    <option value=".{{ cat|replace({' ': '-'}) }}">{{ cat }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-sm-6">
                            <h3 id="catName" class="text-center">All Categories</h3>
                        </div>
                        <div class="col-sm-2">
                            <select class="select-sort form-select">
                                <option value="default:asc">Ascending</option>
                                <option value="default:desc">Descending</option>
                            </select>
                        </div>
                        <div class="col-sm-1"></div>
                    </div>
                </div>
                <div class="vidcontainer">
                    {% for vid in video_list %}
                    <div class="mix card-body {{ vid.category|replace({' ': '-'}) }}" style="cursor: pointer;" data-bs-toggle="offcanvas" data-bs-target="#{{ vid.thumbnail|replace({'.webp': ''})|replace({'.png': ''})|replace({'.jpg': ''}) }}" aria-controls="{{ vid.thumbnail|replace({'.webp': ''})|replace({'.png': ''})|replace({'.jpg': ''}) }}">
                        <img class="card-img-top" style="border: 1px solid goldenrod;" src="{{ base_url }}{{ video_thumbnail_url }}{{ vid.thumbnail }}" alt="Card image cap">
                        <div class="text-center" style="background-color: goldenrod; padding: 10px;"><strong>{{ vid.title }}</strong></div>
                    </div>

                    <div class="offcanvas offcanvas-end" tabindex="-1" id="{{ vid.thumbnail|replace({'.webp': ''})|replace({'.png': ''})|replace({'.jpg': ''}) }}" aria-labelledby="{{ vid.thumbnail|replace({'.webp': ''})|replace({'.png': ''})|replace({'.jpg': ''}) }}Label" style="visibility: visible;" aria-modal="true" role="dialog">
                        <div class="offcanvas-header">
                            <h5 id="{{ vid.thumbnail|replace({'.webp': ''})|replace({'.png': ''})|replace({'.jpg': ''}) }}Label" class="offcanvas-title">{{ vid.title }}</h5>
                            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                        </div>
                        <div class="offcanvas-body my-auto mx-0 flex-grow-0">
                            <p class="text-center">
                                {{ vid.intro }}
                            </p>
                            <a href="{{ base_url }}videos/watch/{{ vid.title|replace({' ': '-'}) }}" class="btn btn-primary mb-2 d-grid w-100" style="color: white;">Watch Video</a>
                            <button type="button" class="btn btn-primary mb-2 d-grid w-100" data-bs-dismiss="offcanvas">Close</button>
                        </div>
                    </div>
                    {% endfor %}
                    <div class="gap"></div>
                    <div class="gap"></div>
                    <div class="gap"></div>
                </div>
                <script>
                    // In this example, we must bind 'change' event handlers to
                    // our <select> elements, then interact with the mixer via
                    // its .filter() and .sort() API methods.
                    
                    var containerEl = document.querySelector('.vidcontainer');
                    var selectFilter = document.querySelector('.select-filter');
                    var selectSort = document.querySelector('.select-sort');
                    
                    var mixer = mixitup(containerEl);
                    
                    selectFilter.addEventListener('change', function() {
                        var selector = selectFilter.value;
                    
                        mixer.filter(selector);
                    });
                    
                    selectSort.addEventListener('change', function() {
                        var order = selectSort.value;
                    
                        mixer.sort(order);
                    });
                </script>
            </div>
        </div>
    </div>

<script>
$(document).ready(function () {
    $("#selectCat").change( function(){
        let category = $("#selectCat").val().replaceAll('-', ' ').replaceAll('.', '');
        if(category == 'all'){
            category = 'All Categories';
        }
        $("#catName").text(category);
    });
});
</script>
</section>
{% endblock %}