<section id="intro" class="section section-no-border mt-4 pb-4 m-0">
  <div class="container">
    
    <h2 class="font-weight-bold text-center text-10 pt-3 mb-4">Follow our animated Videos of The Bible Series</h2>

    <div class="row mt-5">
      <div class="section-title">
        <h3>Most Popular</h3>
      </div>
      {% for pop in popular %}
      <div class="col-md-3 mb-4">
        <h6>{{ pop.title_raw }}</h6>
        <video height="180px" width="100%" controls controlslist="nodownload" poster="{{ base_url }}{{ video_thumbnail_url }}{{ pop.thumbnail }}">
          <source src="{{ base_url }}{{ video_url }}{{ pop.video_url }}" type="video/mp4">
          <source src="{{ base_url }}{{ video_url }}{{ pop.video_url }}" type="video/ogg">
          Your browser does not support HTML5 video.
        </video>
      </div>
    {% endfor %}
    </div>
    <a href="{{ base_url }}videos" class="btn btn-sm btn-primary">View all videos</a>

    <div class="row align-items-center text-center my-5">
      <div class="col-md-6">
        <h2 class="font-weight-bold text-9 mb-0 appear-animation animated fadeInUpShorter appear-animation-visible" data-appear-animation="fadeInUpShorter" data-appear-animation-delay="200" data-appear-animation-duration="750" style="animation-delay: 200ms;">Our mission is to unite the world through Jesus</h2>
        <p class="font-weight-semibold text-primary text-4 fonts-weight-semibold positive-ls-2 mb-3 appear-animation animated fadeInUpShorter appear-animation-visible" data-appear-animation="fadeInUpShorter" data-appear-animation-delay="600" data-appear-animation-duration="750" style="animation-delay: 600ms;">Free online access to the bible and study tools</p>
